<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPrimeraApp.LoginPage"
             xmlns:local="clr-namespace:MiPrimeraApp.Models"
             Title="LoginPage"
             x:DataType="local:Usuario">
    <VerticalStackLayout Padding="30" Spacing="20">
        
        <Label x:Name="MensajeLabel"></Label>
        <CheckBox x:Name="RecordaDatosCheckBox" IsChecked="{Binding Recordarme}"></CheckBox>
        <Entry x:Name="UserEntry" Placeholder="Ingrese su usuario" Text="{Binding User, Mode=TwoWay}"></Entry>
        <Entry x:Name="PasswordEntry" Placeholder="Ingrese su contraseÃ±a" IsPassword="True" Text="{Binding Password, Mode=TwoWay}"></Entry>
        <Button x:Name="EntrarButton" Text="Ingresar" Clicked="EntrarButton_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>